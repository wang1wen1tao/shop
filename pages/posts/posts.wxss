/* pages/posts/posts.wxss */
swiper{
  width: 100%;
  height: 450rpx;
}
swiper image{
  width: 100%;
  height: 450rpx;
}
.posts-contain{
   display: flex;
   flex-direction: column;
   margin-top: 20rpx;
   margin-bottom: 40rpx;
   background-color: #fff;
   border-bottom: 1px solid #ededed;
   border-top:1px solid #ededed;
   padding-bottom:5rpx;
}
.post-auth-date{
  margin: 10rpx 0 20rpx 10rpx;
}
.post-auth{
  width: 60rpx;
  height:60rpx;
  vertical-align: middle;
}
.post-date{
  margin-top: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color:#333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.post-image{
  margin-top:16px;
  width: 100%;
  height: 340rpx;
  margin: 0 auto;
  margin-bottom: 15px;
}
.post-con{
  color:#666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like{
  display: flex;
  flex-direction: row;
  font-size: 13px;
  line-height: 16rpx;
  margin-left: 16rpx;
}
.post-like-image{
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  margin-right: 20rpx;
  line-height: 32rpx;
}